modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "TFL Monitor"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Runner"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "GitHub Actions Verification"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "GitHub Setup Instructions"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "GitHub Workflow Setup"

[[workflows.workflow]]
name = "TFL Monitor"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Test Runner"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pytest -v --cov=. --cov-report=term-missing"

[[workflows.workflow]]
name = "GitHub Actions Verification"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cat .github/workflows/test.yml .github/workflows/scheduled-monitor.yml"

[[workflows.workflow]]
name = "GitHub Setup Instructions"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ls -la .github/workflows/"

[[workflows.workflow]]
name = "GitHub Workflow Setup"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ls -la .github/workflows/"

[deployment]
run = ["sh", "-c", "python main.py"]
deploymentTarget = "scheduled"
